{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node", "react", "react-dom"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
